@model List<Category>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-md-6">
            <h1>Category List</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bg-info bi-plus-circle"></i>
                Create New Category</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Category Name
            </th>
            
            <th>
            Display Order
        </th>
    </tr>
    <tbody>
        @foreach(var obj in Model.OrderBy(c => c.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info text-white"><i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash3-fill"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>